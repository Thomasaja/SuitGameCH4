<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/iv_bg_main"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:text="@string/text_suit_game"
        style="@style/Main"
        android:background="@drawable/bg_title"
        tools:text="SUIT GAME"
        android:id="@+id/tv_title_game_suit"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:background="@drawable/bg_name"
        android:textAlignment="center"
        style="@style/Name"
        tools:text="Thomas"
        app:layout_constraintEnd_toEndOf="@id/iv_player"
        app:layout_constraintStart_toStartOf="@id/iv_player"
        app:layout_constraintBottom_toTopOf="@id/iv_player" />

    <TextView
        android:id="@+id/tv_enemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_name"
        android:textAlignment="center"
        style="@style/Name"
        android:gravity="center"
        android:text="@string/text_enemy"
        app:layout_constraintStart_toStartOf="@id/iv_enemy"
        app:layout_constraintBottom_toTopOf="@id/iv_enemy"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/iv_enemy" />


    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_125sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_enemy"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_125sdp"
        android:src="@drawable/ic_com"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_options"
        style="@style/Following"
        android:id="@+id/tv_following_options"
        android:textAlignment="center"
        android:text="@string/text_tap_the_following_do_you_want_to_choose"
        tools:text="Tap the following dou you want to choose :"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/ll_options"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_rock"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_rock" />

        <ImageView
            android:id="@+id/iv_scissor"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_scissor" />

        <ImageView
            android:id="@+id/iv_paper"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_paper" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>