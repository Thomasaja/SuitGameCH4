<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background_form"
    tools:context=".ui.form.FormFragment">


    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:id="@+id/iv_profil"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/_220sdp"
        android:layout_height="@dimen/_150sdp"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_name"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/bg_edittext_rounded_white"
        android:maxLines="1"
        android:hint="@string/write_your_name"
        android:padding="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_profil"
        android:layout_height="wrap_content"/>






</androidx.constraintlayout.widget.ConstraintLayout>